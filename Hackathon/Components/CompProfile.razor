@using ClassLibrary.Db

@if(profile != null)
{
    <h1>@profile.Name</h1>
    <div class="flex flex-col items-center text-center shadow-lg rounded-lg overflow-hidden">
        <!-- Placeholder for the gallery of pictures -->
        <div class="w-full h-64 bg-red-600">
            <!-- Red square as a placeholder -->
            <!-- Gallery of pictures goes here -->
        </div>

        <!-- Text area below the picture gallery -->
        <div class="p-4">
            <!-- Name and age -->
            <div class="text-lg font-semibold">@(profile.User.Name), @(profile.User.GetAge()) (@profile.Pronouns)</div>
            <!-- Description text -->
            <div class="mt-2">
                @profile.AboutMe
            </div>
        </div>
    </div>
}
else
{
    <div>Loading...</div>
}

@code {

    [Parameter] public Profile profile { get; set; }




}
